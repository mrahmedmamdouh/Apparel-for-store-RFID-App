<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.kr.bluebird.newrfid.app.bbrfidbtdemo.MainActivity">
 
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">
    
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/read_data_str" />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/received_data_str" />
            
            <TextView
                android:id="@+id/data_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty_str" />
            
        </LinearLayout>
                
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/received_msg_str" />
            
            <TextView
                android:id="@+id/message_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty_str" />
            
        </LinearLayout>
        
    </LinearLayout>    
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">                
        
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
                        
            <Button 
                android:id="@+id/bt_settigger_rfid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/set_rfid_str"
                android:textSize="8sp"
                android:layout_weight="1" />
            
            <Button 
                android:id="@+id/bt_settigger_barcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/set_barcode_str"
                android:textSize="8sp"
                android:layout_weight="1" />
            
            <Button 
                android:id="@+id/bt_trigger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/get_trg_str"
                android:textSize="8sp"
                android:layout_weight="1" />

            <Button 
                android:id="@+id/bt_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/reset_str"
                android:textSize="8sp"
                android:layout_weight="1" />
            
        </LinearLayout>

         
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            
            <Button 
                android:id="@+id/bt_sound_enable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/barcode_sound_enable_str"
                android:textSize="8sp"
                android:layout_weight="1" />    
            
            <Button 
                android:id="@+id/bt_sound_disable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/barcode_sound_disable_str"
                android:textSize="8sp"
                android:layout_weight="1" />
            
            <Button 
                android:id="@+id/bt_get_sound_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/get_barcode_sound_state_str"
                android:textSize="8sp"
                android:layout_weight="1" />
            
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            
            <Button 
                android:id="@+id/bt_enable_scanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/barcode_enable_str"
                android:textSize="8sp"
                android:layout_weight="1" />    
            
            <Button 
                android:id="@+id/bt_disable_scanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/barcode_disable_str"
                android:textSize="8sp"
                android:layout_weight="1" />
            
            <Button 
                android:id="@+id/bt_get_revision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/get_barcode_revision_str"
                android:textSize="8sp"
                android:layout_weight="1" />
            
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            
            <Button 
                android:id="@+id/bt_illum_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/barcode_illum_on_str"
                android:textSize="10sp"
                android:layout_weight="1" />    
            
            <Button 
                android:id="@+id/bt_illum_off"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/barcode_illum_off_str"
                android:textSize="10sp"
                android:layout_weight="1" />
            
            <Button 
                android:id="@+id/bt_aim_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/barcode_aim_on_str"
                android:textSize="10sp"
                android:layout_weight="1" />

            <Button 
                android:id="@+id/bt_aim_off"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/barcode_aim_off_str"
                android:textSize="10sp"
                android:layout_weight="1" />
            
        </LinearLayout>
        
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            
            <Spinner
                android:id="@+id/param_spin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:gravity="center_vertical"
                android:layout_weight="1" />

            <Button 
                android:id="@+id/bt_get_param"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/get_param_str"
                android:textSize="9sp" 
                android:layout_weight="3" />
            
        </LinearLayout>
        
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            
            <TextView 
                android:paddingLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="@string/input_param_str"
                android:layout_weight="1" />
            
            <EditText
                android:id="@+id/et_param_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:text=""
                android:layout_weight="1.5" />
                
            <Button 
                android:id="@+id/bt_set_param"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:text="@string/set_param_str" 
                android:textSize="9sp"
                android:layout_weight="1.5" />
            
        </LinearLayout>
        
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            
            <Spinner
                android:id="@+id/bar_text_spin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:gravity="center_vertical"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/et_text_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:maxLength="15"
                android:inputType="textMultiLine"
                android:textSize="12sp"
                android:text=""
                android:layout_weight="1" />
            
            <Button 
                android:id="@+id/bt_set_func"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/set_func_str"
                android:textSize="10sp" 
                android:layout_weight="1.3" />
            
            <Button 
                android:id="@+id/bt_get_func"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/get_func_str" 
                android:textSize="10sp"
                android:layout_weight="1.3" />
            
        </LinearLayout>
        
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            
            <Spinner
                android:id="@+id/scanner_trigger_spin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:gravity="center_vertical"
                android:layout_weight="1" />

            <Button 
                android:id="@+id/bt_set_scan_trigger_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/set_scanner_mode_str"
                android:textSize="8sp" 
                android:layout_weight="1.2" />
            
            <Button 
                android:id="@+id/bt_get_scan_trigger_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/get_scanner_mode_str" 
                android:textSize="8sp"
                android:layout_weight="1.2" />
            
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
                        
            <Button 
                android:id="@+id/bt_barcode_press_of_sled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginLeft="30dp"
                android:text="@string/press_barcode_of_sled_str"
                android:textSize="10sp"
                android:layout_weight="1" />
            
            <Button 
                android:id="@+id/bt_barcode_release_of_sled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="@string/release_barcode_of_sled_str"
                android:layout_marginRight="30dp"
                android:textSize="10sp"
                android:layout_weight="1" />
            
        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>